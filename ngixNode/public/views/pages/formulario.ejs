<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="bg-dark text-white">
    <%- include('../partials/navbar'); %>
    <div class="container-fluid mt-5">
      <div class="row p-5">
        <div class="col text-white ms-5 text-center">
          <h1>Agregar Un Nuevo Producto</h1>
        </div>
      </div>
      <form action="/productos" enctype="multipart/form-data" method="POST" class="row p-5">
        <div class="col-xs-12 col-md-6 col-lg-4">
          <p class="text-white P-2">Nombre del Licor</p>
          <input type="text" name="producto" placeholder="Ingresa nombre del producto " class="w-75" required="true" />
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
          <p class="text-white P-2">precio del producto</p>
          <input type="number" placeholder="ingresa el precio del producto" name="precio" class="w-50" required="true" />
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
          <p class="text-white P-2">ingresa URL de imagen</p>
          <input type="text" name="imagen" class="w-100" required="true" />
        </div>
        <div class="col-xs-12 col-md-6 col-lg-12 P-4 mt-5 text-center">
          <input type="submit" value="Upload a file" />
        </div>
      </form>
    </div>
    <%- include('../partials/footer'); %>
  </body>
</html>
