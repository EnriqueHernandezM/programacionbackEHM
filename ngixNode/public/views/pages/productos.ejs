<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="bg-dark text-white">
    <%- include('../partials/navbar'); %>
    <div class="container-fluid mt-5" id="renderUpdateProducts"></div>
    <div class="container m-auto">
      <div class="row logoVerCarrito">
        <ul>
          <li><a href="/loguear">Ver carrito 🛒</a></li>
          <li><button onclick="renderUpdateProductos()">Agregar productos</button></li>
        </ul>
      </div>
      <h2 class="p-5 text-center">productos disponibles</h2>
      <div id="probandoAct">
        <%allItems.forEach((el) => {%>
        <div>
          <img src="<%=el.image%>" alt="imagen de un producto en carrioto" />
          <p><%=el.product%></p>
          <p>$:<%=el.price%></p>
          <span onclick="addArticleTrolley('<%=el._id%>')"> agregar al 🛒 </span>
          <span onclick="deleteElement('<%=el._id%>')">borrar 🗑️ </span>
        </div>
        <%})%>
      </div>
    </div>
    <div class="container m-auto">
      <div class="row">
        <h3 class="fs-1 p-5 text-center">CHAT</h3>
        <div class="d-flex container justify-content-between my-5">
          <h4>Tamaño de mensajes normalizados: <span id="normalizados"></span></h4>
          <h4>Tamaño de mensajes desnormalizados: <span id="desnormalizados"></span></h4>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
          <form onsubmit="enviarMsg();return false;">
            <input id="inputEmail" required="true" placeholder="Correo Electronico" />
            <input id="inputMsg" required="true" placeholder="mensaje" />
            <input id="avatarImagen" required="true" placeholder="imagen" />
            <input id="Nombre" required="true" placeholder="tu Nombre" />
            <input id="apellido" required="true" placeholder="tu apellido" />
            <input id="edad" required="true" placeholder="tu edad" />
            <input id="alias" required="true" placeholder="Elije un alias" />
            <input class="bEnv" type="submit" value="Enviar" />
          </form>
        </div>
      </div>
    </div>
    <div class="container m-auto">
      <div class="row">
        <div class="col-xs-12 col-md-6 col-lg-4">
          <div id="boxMsges"></div>
        </div>
      </div>
    </div>
    <%- include('../partials/footer'); %> //
  </body>
</html>
