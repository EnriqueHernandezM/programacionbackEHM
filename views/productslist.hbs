<div class="container-fluid text-center pt-4 mt-5 ">
    <h1 class="mt-5  text-white"> productos Disponibles</h1>
    {{#if productsExist}}
        {{#each products}}
            <div class="row align-items-center text-white">
                <div class="col-xs-12 col-md-6 col-lg-4 p-5">
                    <img src="{{this.imagen}}" class="img-fluid img-thumbnail w-75 m-3" />
                </div>
                <div class="col-xs-12 col-md-6 col-lg-4 fs-2" >
                    {{this.producto}}<br/>
                </div>
                <div class="col-xs-12 col-md-6 col-lg-4 fs-2">
                    ${{this.precio}}<br/>
                </div>
            
            </div>
        {{/each}}
        {{else}}
        <div class="container-fluid mt-5 pt-5 ">
            <div class="row">
                <h1 class=" fs-1 text-white"> vacio</h1>
                <div class="col text-center text-white fs-2 ">
                    {{products}}
                </div>
            </div>
        </div>
    {{/if}}
<br/>
{{> footer}}
