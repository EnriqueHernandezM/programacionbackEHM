<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-dark text-white">
    <%- include('../partials/navbar'); %>
    <div class="container-fluid mt-5">
      <div class="row p-5">
        <div class="col text-white ms-5 text-center">
          <h1>LOGIN</h1>
        </div>
      </div>
      <div class="row p-5">
        <div class="col text-white ms-5 text-center">
          <% if (sessionE == "desp" ){ %>
          <h1><%=mdg%></h1>
          <% } if (sessionE == "fake" ){ %>
          <h1><%=msg%></h1>
          <% } if (sessionE == true ){ %>
          <h1>Hola Bienvenido <%=userE%></h1>

          <div class="col-xs-12 col-md-6 col-lg-12 P-4 mt-5 text-center">
            <a href="/logout">cerrar session</a>
          </div>

          <% } if(sessionE == false){ %>
          <h1>Hola al parecer aun no estas en el sistema</h1>
          <% } else{ %>
        </div>
      </div>
      <form action="/loguear" method="post" class="row p-5">
        <div class="col-xs-12 col-md-6 col-lg-4">
          <p class="text-white P-2">Nombre de Usuario</p>
          <input type="text" name="nombreUserLog" placeholder="Ingresa nombre del producto " class="w-75" required="true" />
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
          <p class="text-white P-2">ingresa Una contraseña</p>
          <input type="text" name="contraseñaLog" class="w-100" required="true" />
        </div>
        <div class="col-xs-12 col-md-6 col-lg-12 P-4 mt-5 text-center">
          <input type="submit" />
        </div>
      </form>
    </div>
    <% } %> <%- include('../partials/footer'); %>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"
  ></script>
</html>
