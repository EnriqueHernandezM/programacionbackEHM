<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-dark text-white">
    <%- include('../partials/navbar'); %>
    <h2 class="pt-5 ms-5 ps-4">Listado de productos</h2>
    <% if(productsExist) { %><% products.forEach((item)=>{ %>
    <article class="mt-5 pt-5 d-flex align-items-center flex-row-reverse justify-content-around w-75 m-auto mb-5">
      <p class="w-25 text-center fs-2">Licor: <%=item.producto%><br /></p>
      <p class="w-25 text-left fs-2">precio: <%=item.precio%><br /></p>
      <img class="w-25 align me-auto" src=" <%=item.imagen %>" /><br />
    </article>
    <% }) %> <%}else {%>
    <h2 class="fs-1 text-center mt-4 p-5">UPPS</h2>
    <p class="text-center fs-1 p-4 mb-4"><%-products%></p>
    <%}%> <%- include('../partials/footer'); %>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"
  ></script>
</html>
